<Window x:Class="CourseWork2.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork2.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="805" FontFamily="Microsoft YaHei Light">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>

        <TabControl Grid.Row="0" Grid.Column="0" Margin="5,0,5,0">
            <TabItem Name="Lessons" Margin="0,0,0,0">
                <TabItem.Header>
                    <TextBlock Text ="Lessons"/>
                </TabItem.Header>
                <ListView>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header ="Lesson Name"/>
                            <GridViewColumn Header ="Task"/>
                            <GridViewColumn Header ="Start Time"/>
                            <GridViewColumn Header ="End Time"/>
                            <GridViewColumn Header ="Progress"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            
            <TabItem Name="ToDoList" Margin="0,0,0,0">
                <TabItem.Header>
                    <TextBlock Text ="GeneralNotes"/>
                </TabItem.Header>
                <ListView>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header ="Task"/>
                            <GridViewColumn Header ="Progress"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>
        <Calendar Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="0,5,5,5"/>
    </Grid>
</Window>
