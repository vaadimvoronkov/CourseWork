<Window x:Class="CourseWork2.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork2.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="805" FontFamily="Microsoft YaHei Light">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="2" Grid.Column="0" Margin="5,0,5,0">
            <TabItem Name="Lessons" Margin="0,0,0,0" DataContext="{Binding LessonsTab}">
                <TabItem.Header>
                    <TextBlock Text ="Lessons"/>
                </TabItem.Header>
                <ListView ItemsSource="{Binding Lessons}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header ="Lesson Name"/>
                            <GridViewColumn Header ="Task"/>
                            <GridViewColumn Header ="Time Interval"/>
                            <GridViewColumn Header ="Progress"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Name="AddLesson" Margin="0,0,0,0" DataContext="{Binding LessonsTab}">
                <TabItem.Header>
                    <TextBlock Text ="Add Lesson"/>
                </TabItem.Header>
                <local:AddLessonView DataContext="{Binding LessonVM}">
                    
                </local:AddLessonView>
            </TabItem>
        </TabControl>

        <DatePicker Grid.Row="1" VerticalAlignment="Top" Margin="5,5,5,5" FirstDayOfWeek="Monday" SelectedDateFormat="Short" Text="gyu" SelectedDate="{Binding SelectedDate}"/>
        <Label Content="Diary" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" FontSize="16"/>
        <StackPanel Grid.Row="3" Margin="5,0,5,0" Orientation="Horizontal" />
    </Grid>
</Window>
